{% extends 'base_1.html.twig' %}

{% block title %}Liste des imprimés du BE{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-12">       
        <!-- DataTales Roles -->
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between bg-gradient-primary">
                <h4 class="m-0 font-weight-bold text-gray-100">Liste des imprimés du BE</h4>
                <div class="dropdown no-arrow">
                    <a href="{{ path('be_index') }}" title="Retour à la liste" class="btn btn-sm btn-secondary btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-list"></i>
                        </span>
                    </a>
                    <a href="{{ path('be_new') }}" title="Créer" class="btn btn-sm btn-primary btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-plus"></i>
                        </span>
                    </a>
                </div>
            </div>
            {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                    {{ message }}
            </div>
            {% endfor %}
            <div class="card-body">
                <div class="table-responsive table-striped">
                    <table class="table table-sm table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr class="text-center">
                                <th>N°</th>
                                <th>Centre</th>
                                <th>Réf. EDB</th>
                                <th>Réf. BE</th>
                                <th>Type imprimé</th>
                                <th>N° imprimé</th>
                                <th width="12%">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for ct_bordereau in ct_bordereaus %}
                            {% set i = ( i | default(0) ) + 1 %}
                                <tr>
                                    <td class="text-center">{{ i }}</td>
                                    <td class="text-center">{{ ct_bordereau.ctCentre ? ct_bordereau.ctCentre.ctrNom : "" }}</td>
                                    <td class="text-center">{{ ct_bordereau.ctExpressionBesoin ? ct_bordereau.ctExpressionBesoin.edbNumero : "" }}</td>
                                    <td class="text-center">{{ ct_bordereau.beNumero }}</td>
                                    <td class="text-left">{{ ct_bordereau.ctImprimeTech ? ct_bordereau.ctImprimeTech.nomImprimeTech : "" }}</td>
                                    <td class="text-center">{{ ct_bordereau.beDebutNumero | number_format(0, ',', '.') }} à {{ ct_bordereau.beFinNumero | number_format(0, ',', '.') }}</td>
                                    <td class="text-center">
                                        {# <a class="btn btn-sm btn-info"
                                            href="{{ path('be_show', {'id': ct_bordereau.id}) }}">
                                                <i class="fas fa-eye"></i>
                                        </a> #}
                                        {% if is_granted('ROLE_SUPERADMIN') %}
                                        <a class="btn btn-sm btn-warning" title="Modifier"
                                            href="{{ path('be_edit', {'id': ct_bordereau.id}) }}">
                                                <i class="fas fa-pen"></i>
                                        </a>
                                        <a class="btn btn-sm btn-danger" title="Supprimer"
                                            href="{{ path('be_delete', {'id': ct_bordereau.id}) }}">
                                                <i class="fas fa-trash"></i>
                                        </a>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="8" class="text-center alert-danger">Aucun enregistrement trouvé.</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <a href="{{ path('be_index') }}" class="btn btn-sm btn-secondary btn-icon-split ml-2 mr-2">
                        <span class="icon text-white-50">
                            <i class="fas fa-list"></i>
                        </span>
                        <span class="text">Retour à la liste</span>
                    </a>
                    <a href="{{ path('be_new') }}" class="btn btn-sm btn-primary btn-icon-split ml-2 mr-2">
                        <span class="icon text-white-50">
                            <i class="fas fa-plus"></i>
                        </span>
                        <span class="text">Ajouter une imprimé dans le BE</span>
                    </a>
                    {# {% if ct_bordereaus %}
                    <a href="{{ path('be_print') }}" id="btn-edb-printing" target="_blank" class="btn btn-sm btn-icon-split btn-success ml-2 mr-2">
                        <span class="icon text-white-50">
                            <i class="fas fa-print"></i>
                        </span>
                        <span class="text">Imprimer le BE</span>
                    </a>
                    {% endif %} #}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}