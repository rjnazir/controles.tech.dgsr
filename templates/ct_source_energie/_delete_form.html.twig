    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ct_source_energie.id) }}">
    <button class="btn btn-sm btn-danger btn-icon-split ml-2 mr-2">
        <span class="icon text-white-50">
            <i class="fa fa-trash"></i>
        </span>
        <span class="text">Supprimer la source d'énergie</span>
    </button>
</form>
