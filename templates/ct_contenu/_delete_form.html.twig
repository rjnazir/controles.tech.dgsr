<form method="post" action="{{ path('contenu_delete', {'id': ct_contenu.id}) }}" onsubmit="return confirm('Est-vous sûr de vouloir supprimer cet enregistrement?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ct_contenu.id) }}">
    <button class="btn btn-sm bg-gradient-danger text-white btn-icon-split ml-2 mr-2">
        <span class="icon text-white">
            <i class="fa fa-trash"></i>
        </span>
        <span class="text">Supprimer l'imprimé de l'EDB</span>
    </button>
</form>
