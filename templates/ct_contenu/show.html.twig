{% extends 'base_1.html.twig' %}

{% block title %}Détail de l'imprimé l'EDB{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-12">       
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between bg-gradient-primary">
                <h4 class="m-0 font-weight-bold text-gray-100">Détail de l'imprimé l'EDB</h4>
                <div class="dropdown no-arrow">
                    <a href="{{ path('contenu_index') }}" title="Retour à la liste" class="btn btn-sm btn-secondary btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-list"></i>
                        </span>
                    </a>
                    {% if is_granted('ROLE_SUPERADMIN') %}
                    <a href="{{ path('contenu_new') }}" title="Créer" class="btn btn-sm btn-primary btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-plus"></i>
                        </span>
                    </a>
                    {% endif %}
                </div>
            </div>
            <div class="card-body">
                <table class="table">
                    <tbody>
                        <tr>
                            <th width="20%">Référence de l'EDB : </th>
                            <td width="80%">{{ ct_contenu.ctExpressionBesoin ? ct_contenu.ctExpressionBesoin.edbNumero : "" }}</td>
                        </tr>
                        <tr>
                            <th width="20%">Date de l'EDB : </th>
                            <td width="80%">{{ ct_contenu.ctExpressionBesoin ? ct_contenu.ctExpressionBesoin.edbDateEdit | date('d/m/Y') : "" }}</td>
                        </tr>
                        <tr>
                            <th width="20%">Type d'imprimé : </th>
                            <td width="80%">{{ ct_contenu.ctImprimeTech ? ct_contenu.ctImprimeTech.nomImprimeTech : "" }}</td>
                        </tr>
                        <tr>
                            <th width="20%">Quantité : </th>
                            <td width="80%">{{ ct_contenu.qteDemande }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="card-footer">
                <div class="row">
                    <a href="{{ path('contenu_index') }}" class="btn btn-sm btn-secondary btn-icon-split ml-2 mr-2">
                        <span class="icon text-white-50">
                            <i class="fas fa-list"></i>
                        </span>
                        <span class="text">Retour à la liste</span>
                    </a>
                    {# {% if is_granted('ROLE_SUPERADMIN') %} #}
                    <a href="{{ path('contenu_new') }}" class="btn btn-sm btn-primary btn-icon-split ml-2 mr-2">
                        <span class="icon text-white-50">
                            <i class="fas fa-plus"></i>
                        </span>
                        <span class="text">Ajouter une imprimé de l'EDB</span>
                    </a>
                    <a href="{{ path('contenu_edit', {'id': ct_contenu.id}) }}" class="btn btn-sm btn-warning btn-icon-split ml-2 mr-2">
                        <span class="icon text-white-50">
                            <i class="fas fa-pen"></i>
                        </span>
                        <span class="text">Modifier l'imprimé de l'EDB</span>
                    </a>
                    <div>{{ include('ct_contenu/_delete_form.html.twig') }}</div>
                    {# {% endif %} #}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
