{% extends 'base_1.html.twig' %}

{% block title %}Listes des utilisateurs{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-12">       
        <!-- DataTales Users -->
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between bg-gradient-primary">
                <h4 class="m-0 font-weight-bold text-gray-100">Listes des utilisateurs</h4>
                <div class="dropdown no-arrow">
                    <a href="{{ path('app_user_index') }}" title="Retour à la liste" class="btn btn-sm btn-secondary btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-list"></i>
                        </span>
                    </a>
                    {% if is_granted('ROLE_SUPERADMIN') %}
                    <a href="{{ path('app_user_new') }}" title="Créer" class="btn btn-sm btn-primary btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-user-plus"></i>
                        </span>
                    </a>
                    {% endif %}
                </div>
            </div>
            {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                    {{ message }}
            </div>
            {% endfor %}
            <div class="card-body">
                <div class="table-responsive table-striped">
                    <table class="table table-sm table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr class="text-center">
                                <th>N°</th>
                                <th>Nom et prénoms</th>
                                <th>Centre</th>
                                <th>Login</th>
                                <th>Active</th>
                                <th width="12%">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for user in users %}
                            {% set i = ( i | default(0) ) + 1 %}
                                <tr>
                                    <td class="text-center">{{ i }}</td>
                                    <td>{{ user.usrnamecomplet }}</td>
                                    <td>{{ user.ctCentre.ctrNom }}</td>
                                    <td>{{ user.username }}</td>
                                    <td class="text-center">{{ user.actived == 0 ? 'Non' : 'Oui'  }}</td>
                                    <td class="text-center">
                                        <a class="btn btn-sm btn-info"
                                            href="{{ path('app_user_show', {'id': user.id}) }}">
                                                <i class="fas fa-eye"></i>
                                        </a>
                                        {% if is_granted('ROLE_SUPERADMIN') or is_granted('ROLE_ADMIN') %}
                                        <a class="btn btn-sm btn-warning"
                                            href="{{ path('app_user_edit', {'id': user.id}) }}">
                                                <i class="fas fa-pen"></i>
                                        </a>
                                        {% endif %}
                                        {% if is_granted('ROLE_SUPERADMIN') %}
                                        <a class="btn btn-sm btn-danger"
                                            href="{{ path('app_user_delete', {'id': user.id}) }}">
                                                <i class="fas fa-trash"></i>
                                        </a>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3" class=" alert-danger">Aucun enregistrement trouvé.</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <a href="{{ path('app_user_index') }}" class="btn btn-sm btn-secondary btn-icon-split ml-2 mr-2">
                        <span class="icon text-white-50">
                            <i class="fas fa-list"></i>
                        </span>
                        <span class="text">Retour à la liste</span>
                    </a>
                    {% if is_granted('ROLE_SUPERADMIN') %}
                    <a href="{{ path('app_user_new') }}" class="btn btn-sm btn-primary btn-icon-split ml-2 mr-2">
                        <span class="icon text-white-50">
                            <i class="fas fa-plus"></i>
                        </span>
                        <span class="text">Créer utilisateur</span>
                    </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
