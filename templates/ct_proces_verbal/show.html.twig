{% extends 'base_1.html.twig' %}

{% block title %}Détail tarif procès-verbal{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-12">       
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between bg-gradient-primary">
                <h4 class="m-0 font-weight-bold text-gray-100">Détail tarif procès-verbal</h4>
                <div class="dropdown no-arrow">
                    <a href="{{ path('pv_index') }}" title="Retour à la liste" class="btn btn-sm bg-gradient-secondary text-white btn-icon-split">
                        <span class="icon text-white">
                            <i class="fas fa-list"></i>
                        </span>
                    </a>
                    {% if is_granted('ROLE_SUPERADMIN') %}
                    <a href="{{ path('pv_new') }}" title="Créer" class="btn btn-sm bg-gradient-primary text-white btn-icon-split">
                        <span class="icon text-white">
                            <i class="fas fa-plus"></i>
                        </span>
                    </a>
                    {% endif %}
                </div>
            </div>
            <div class="card-body">
                <table class="table">
                    <tbody>
                        <tr>
                            <th width="20%">Arrêté : </th>
                            <td width="80%">{{ ct_proces_verbal.ctArretePrix ? ct_proces_verbal.ctArretePrix.artNumero : "" }}</td>
                        </tr>
                        <tr>
                            <th width="20%">Type : </th>
                            <td width="80%">{{ ct_proces_verbal.pvType }}</td>
                        </tr>

                        <tr>
                            <th width="20%">Tarif : </th>
                            <td width="80%">{{ ct_proces_verbal.pvTarif | number_format(2, ',', '.') }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="card-footer">
                <div class="row">
                    <a href="{{ path('pv_index') }}" class="btn btn-sm bg-gradient-secondary text-white btn-icon-split ml-2 mr-2">
                        <span class="icon text-white">
                            <i class="fas fa-list"></i>
                        </span>
                        <span class="text">Retour à la liste</span>
                    </a>
                    {% if is_granted('ROLE_SUPERADMIN') %}
                    <a href="{{ path('pv_new') }}" class="btn btn-sm bg-gradient-primary text-white btn-icon-split ml-2 mr-2">
                        <span class="icon text-white">
                            <i class="fas fa-plus"></i>
                        </span>
                        <span class="text">Créer un tarif procès-verbal</span>
                    </a>
                    <a href="{{ path('pv_edit', {'id': ct_proces_verbal.id}) }}" class="btn btn-sm bg-gradient-warning text-white btn-icon-split ml-2 mr-2">
                        <span class="icon text-white">
                            <i class="fas fa-pen"></i>
                        </span>
                        <span class="text">Modifier tarif procès-verbal</span>
                    </a>
                    <div>{{ include('ct_proces_verbal/_delete_form.html.twig') }}</div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
