{% extends 'base_1.html.twig' %}

{% block title %}Détail de l'EDB{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-12">       
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between bg-gradient-primary">
                <h4 class="m-0 font-weight-bold text-gray-100">Détail de l'EDB</h4>
                <div class="dropdown no-arrow">
                    <a href="{{ path('edb_index') }}" title="Retour à la liste" class="btn btn-sm bg-gradient-secondary text-white btn-icon-split">
                        <span class="icon text-white">
                            <i class="fas fa-list"></i>
                        </span>
                    </a>
                    {% if is_granted('ROLE_SUPERADMIN') %}
                    <a href="{{ path('edb_new') }}" title="Créer" class="btn btn-sm bg-gradient-primary text-white btn-icon-split">
                        <span class="icon text-white">
                            <i class="fas fa-plus"></i>
                        </span>
                    </a>
                    <a href="{{ path('edb_print', {'id': ct_expression_besoin.id}) }}" target="_blank" title="Générer" class="btn btn-sm bg-gradient-danger text-white btn-icon-split">
                        <span class="icon text-white">
                            <i class="fa fa-file-pdf"></i>
                        </span>
                    </a>
                    {% endif %}
                </div>
            </div>
            {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                    {{ message }}
            </div>
            {% endfor %}
            <div class="card-body">
                <table class="table">
                    <tbody>
                        <tr>
                            <th width="20%">Centre : </th>
                            <td width="80%">{{ ct_expression_besoin.ctCentre ? ct_expression_besoin.ctCentre.ctrNom : "" }}</td>
                        </tr>
                        <tr>
                            <th width="20%">Numéro de l'EDB : </th>
                            <td width="80%">{{ ct_expression_besoin.edbNumero }}</td>
                        </tr>
                        <tr>
                            <th width="20%">Date de l'EDB : </th>
                            <td width="80%">{{ ct_expression_besoin.edbDateEdit | date('d/m/Y') }}</td>
                        </tr>
                        {# <tr>
                            <th width="20%">Type d'imprimé : </th>
                            <td width="80%">{{ ct_expression_besoin.ctImprimeTech ? ct_expression_besoin.ctImprimeTech.nomImprimeTech : "" }}</td>
                        </tr>
                        <tr>
                            <th width="20%">Quantité : </th>
                            <td width="80%">{{ ct_expression_besoin.edbQteDemander }}</td>
                        </tr> #}
                    </tbody>
                </table>
            </div>
            
            <div class="card shadow mb-4">
                <div class="card-header bg-gradient-light py-3 d-flex flex-row align-items-center justify-content-between">
                    <h4 class="m-0 font-weight-bold text-dark">Liste des contenus de l'EDB</h4>
                    <div class="dropdown no-arrow">
                        <a href="{{ path('contenu_new', {'id': ct_expression_besoin.id}) }}" title="Ajouter imprimée" class="btn btn-sm bg-gradient-light text-dark btn-icon-split">
                            <span class="icon text-dark">
                                <i class="fas fa-plus"></i>
                            </span>
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive table-striped">
                        <table class="table table-sm table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr class="text-center">
                                    <th>N°</th>
                                    <th>Type</th>
                                    <th>Quantité</th>
                                    <th>Numéro IT</th>
                                    <th width="12%">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for ct_contenu in ct_contenus %}
                                {% set i = ( i | default(0) ) + 1 %}
                                    <tr>
                                        <td class="text-center">{{ i }}</td>
                                        <td class="text-left">{{ ct_contenu.ctImprimeTech ? ct_contenu.ctImprimeTech.nomImprimeTech : "" }}</td>
                                        <td class="text-right">{{ ct_contenu.qteDemande | number_format(2, ',', '.') }}</td>
                                        <td class="text-center">{{ ct_contenu.debutNumero and ct_contenu.finNumero ? "#{ct_contenu.debutNumero | number_format(0, ',', '.')} à #{ct_contenu.finNumero | number_format(0, ',', '.')}" : "-" }}</td>
                                        <td class="text-center">
                                            <a class="btn btn-sm bg-gradient-warning text-white" title="Modifier"
                                                href="{{ path('contenu_edit', {'id': ct_contenu.id, 'ctExpressionBesoin': ct_expression_besoin.id}) }}">
                                                    <i class="fas fa-pen"></i>
                                            </a>
                                            <a class="btn btn-sm bg-gradient-danger text-white" title="Supprimer"
                                                href="{{ path('contenu_delete', {'id': ct_contenu.id}) }}">
                                                    <i class="fas fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="5" class="text-center alert-danger">Aucun enregistrement trouvé.</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="card-footer">
                <div class="row">
                    <a href="{{ path('edb_index') }}" class="btn btn-sm bg-gradient-secondary text-white btn-icon-split ml-2 mr-2">
                        <span class="icon text-white">
                            <i class="fas fa-list"></i>
                        </span>
                        <span class="text">Retour à la liste</span>
                    </a>
                    {% if is_granted('ROLE_SUPERADMIN') %}
                    <a href="{{ path('edb_new') }}" class="btn btn-sm bg-gradient-primary text-white btn-icon-split ml-2 mr-2" title="Créer une EDB">
                        <span class="icon text-white">
                            <i class="fas fa-plus"></i>
                        </span>
                        <span class="text">Créer une EDB</span>
                    </a>
                    <a href="{{ path('edb_edit', {'id': ct_expression_besoin.id}) }}" class="btn btn-sm bg-gradient-warning text-white btn-icon-split ml-2 mr-2" title="Modifier l'EDB">
                        <span class="icon text-white">
                            <i class="fas fa-pen"></i>
                        </span>
                        <span class="text">Modifier l'EDB</span>
                    </a>
                    <div>{{ include('ct_expression_besoin/_delete_form.html.twig') }}</div>
                    <a href="{{ path('edb_print', {'id': ct_expression_besoin.id}) }}" class="btn btn-sm  bg-gradient-danger text-white btn-icon-split ml-2 mr-2" title="Générer l'EDB" target='_black'>
                    {# <a href="{{ path('edb_print_docx', {'id': ct_expression_besoin.id}) }}" class="btn btn-sm bg-gradient-success text-white" title="Imprimer" target='_black'> #}
                        <span class="icon text-white">
                            <i class="fas fa-file-pdf"></i>
                        </span>
                        <span class="text">Imprimer l'EDB</span>
                    </a>
                    {# <a href="{{ path('contenu_new', {'id': ct_expression_besoin.id}) }}" class="btn btn-sm bg-gradient-info text-white btn-icon-split ml-2 mr-2">
                        <span class="icon text-white">
                            <i class="fas fa-plus-square"></i>
                        </span>
                        <span class="text">Ajouter des imprimés</span>
                    </a> #}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}