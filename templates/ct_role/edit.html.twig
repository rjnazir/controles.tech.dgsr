{% extends 'base_1.html.twig' %}

{% block title %}Modifier rôle{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">       
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between bg-gradient-primary">
                    <h4 class="m-0 font-weight-bold text-gray-100">Modifier rôle</h4>
                    <div class="dropdown no-arrow">
                        <a href="{{ path('app_ct_role_index') }}" title="Retour à la liste" class="btn btn-sm btn-secondary btn-icon-split">
                            <span class="icon text-white-50">
                                <i class="fas fa-list"></i>
                            </span>
                        </a>
                        <a href="{{ path('app_ct_role_new') }}" title="Créer" class="btn btn-sm btn-primary btn-icon-split">
                            <span class="icon text-white-50">
                                <i class="fas fa-user-plus"></i>
                            </span>
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        {{ form_row(form.role_name) }}
                        {{ form_row(form.save) }}
                    {{ form_end(form) }}
                </div>

                <div class="card-footer">
                    <div class="row">
                        <a href="{{ path('app_ct_role_index') }}" class="btn btn-sm btn-secondary btn-icon-split ml-2 mr-2">
                            <span class="icon text-white-50">
                                <i class="fas fa-list"></i>
                            </span>
                            <span class="text">Retour à la liste</span>
                        </a>
                        <a href="{{ path('app_ct_role_new') }}" class="btn btn-sm btn-primary btn-icon-split ml-2 mr-2">
                            <span class="icon text-white-50">
                                <i class="fas fa-user-plus"></i>
                            </span>
                            <span class="text">Créer rôle</span>
                        </a>
                        <div>{{ include('ct_role/_delete_form.html.twig') }}</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
