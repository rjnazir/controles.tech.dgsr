{% extends 'base_1.html.twig' %}

{% block title %}Détail tarif d'usage{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-12">       
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between bg-gradient-primary">
                <h4 class="m-0 font-weight-bold text-gray-100">Détail tarif d'usage</h4>
                <div class="dropdown no-arrow">
                    <a href="{{ path('usage_tarif_index') }}" title="Retour à la liste" class="btn btn-sm btn-secondary btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-list"></i>
                        </span>
                    </a>
                    {% if is_granted('ROLE_SUPERADMIN') %}
                    <a href="{{ path('usage_tarif_new') }}" title="Créer" class="btn btn-sm btn-primary btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-plus"></i>
                        </span>
                    </a>
                    {% endif %}
                </div>
            </div>
            <div class="card-body">
                <table class="table">
                    <tbody>
                        <tr>
                            <th width="20%">Usage : </th>
                            <td width="80%">{{ ct_usage_tarif.ctUsage ? ct_usage_tarif.ctUsage.usgLibelle : '' }}</td>
                        </tr>
                        <tr>
                            <th width="20%">Validité (en mois) : </th>
                            <td width="80%">{{ ct_usage_tarif.ctUsage ? ct_usage_tarif.ctUsage.usgValidite : '' }}</td>
                        </tr>
                        <tr>
                            <th width="20%">Type visite : </th>
                            <td width="80%">{{ ct_usage_tarif.ctTypeVisite ? ct_usage_tarif.ctTypeVisite.tpvLibelle : '' }}</td>
                        </tr>
                        <tr>
                            <th width="20%">Année : </th>
                            <td width="80%">{{ ct_usage_tarif.usgTrfAnnee }}</td>
                        </tr>
                        <tr>
                            <th width="20%">Prix : </th>
                            <td width="80%">{{ ct_usage_tarif.usgTrfPrix | number_format(2, ',', '.') }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="card-footer">
                <div class="row">
                    <a href="{{ path('usage_tarif_index') }}" class="btn btn-sm btn-secondary btn-icon-split ml-2 mr-2">
                        <span class="icon text-white-50">
                            <i class="fas fa-list"></i>
                        </span>
                        <span class="text">Retour à la liste</span>
                    </a>
                    {% if is_granted('ROLE_SUPERADMIN') %}
                    <a href="{{ path('usage_tarif_new') }}" class="btn btn-sm btn-primary btn-icon-split ml-2 mr-2">
                        <span class="icon text-white-50">
                            <i class="fas fa-plus"></i>
                        </span>
                        <span class="text">Créer tarif d'usage</span>
                    </a>
                    <a href="{{ path('usage_tarif_edit', {'id': ct_usage_tarif.id}) }}" class="btn btn-sm btn-warning btn-icon-split ml-2 mr-2">
                        <span class="icon text-white-50">
                            <i class="fas fa-pen"></i>
                        </span>
                        <span class="text">Modifier tarif d'usage</span>
                    </a>
                    <div>{{ include('ct_usage_tarif/_delete_form.html.twig') }}</div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
