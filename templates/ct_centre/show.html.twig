{% extends 'base_1.html.twig' %}

{% block title %}Détail le centre{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">       
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between bg-gradient-primary">
                    <h4 class="m-0 font-weight-bold text-gray-100">Détail le centre</h4>
                    <div class="dropdown no-arrow">
                        <a href="{{ path('app_ct_centre_index') }}" title="Retour à la liste" class="btn btn-sm bg-gradient-secondary text-white btn-icon-split">
                            <span class="icon text-white">
                                <i class="fas fa-list"></i>
                            </span>
                        </a>
                        {% if is_granted('ROLE_SUPERADMIN') %}
                        <a href="{{ path('app_ct_centre_new') }}" title="Créer" class="btn btn-sm bg-gradient-primary text-white btn-icon-split">
                            <span class="icon text-white">
                                <i class="fas fa-plus"></i>
                            </span>
                        </a>
                        {% endif %}
                    </div>
                </div>
                <div class="card-body">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th width="20%">Libellé : </th>
                                <td width="80%">{{ ct_centre.ctrNom }}</td>
                            </tr>
                            <tr>
                                <th width="20%">Code : </th>
                                <td width="80%">{{ ct_centre.ctrCode }}</td>
                            </tr>
                            <tr>
                                <th width="20%">Acronyme : </th>
                                <td width="80%">{{ ct_centre.ctrAcronyme }}</td>
                            </tr>
                            <tr>
                                <th width="20%">Province : </th>
                                <td width="80%">{{ ct_centre.ctProvince.prvNom }}</td>
                            </tr>
                            <tr>
                                <th width="20%">Est centre parent : </th>
                                <td width="80%">{{ ct_centre.isParent == 1 ? "Oui" : "Non" }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="card-footer">
                    <div class="row">
                        <a href="{{ path('app_ct_centre_index') }}" class="btn btn-sm bg-gradient-secondary text-white btn-icon-split ml-2 mr-2">
                            <span class="icon text-white">
                                <i class="fas fa-list"></i>
                            </span>
                            <span class="text">Retour à la liste</span>
                        </a>
                        {% if is_granted('ROLE_SUPERADMIN') %}
                    <a href="{{ path('app_ct_centre_new') }}" class="btn btn-sm bg-gradient-primary text-white btn-icon-split ml-2 mr-2">
                        <span class="icon text-white">
                            <i class="fas fa-plus"></i>
                        </span>
                        <span class="text">Créer un centre</span>
                    </a>
                        <a href="{{ path('app_ct_centre_edit', {'id': ct_centre.id}) }}" class="btn btn-sm bg-gradient-warning text-white btn-icon-split ml-2 mr-2">
                            <span class="icon text-white">
                                <i class="fas fa-pen"></i>
                            </span>
                            <span class="text">Modifier centre</span>
                        </a>
                        <div>{{ include('ct_centre/_delete_form.html.twig') }}</div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
