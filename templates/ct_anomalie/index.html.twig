{% extends 'base_1.html.twig' %}

{% block title %}Liste des anomalies{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-12">       
        <!-- DataTales Roles -->
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between bg-gradient-primary">
                <h4 class="m-0 font-weight-bold text-gray-100">Liste des anomalies</h4>
                <div class="dropdown no-arrow">
                    <a href="{{ path('app_ct_anomalie_index') }}" class="btn btn-sm bg-gradient-secondary text-white btn-icon-split">
                        <span class="icon text-white">
                            <i class="fas fa-list"></i>
                        </span>
                    </a>
                    {% if is_granted('ROLE_SUPERADMIN') %}
                    <a href="{{ path('app_ct_anomalie_new') }}" class="btn btn-sm bg-gradient-primary text-white btn-icon-split">
                        <span class="icon text-white">
                            <i class="fas fa-plus"></i>
                        </span>
                    </a>
                    {% endif %}
                </div>
            </div>
            {% for message in app.flashes('success') %}
            <div class="alert bg-gradient-success text-white">
                {{ message }}
            </div>
            {% endfor %}
            <div class="card-body">
                <div class="table-responsive table-striped">
                    <table class="table table-sm table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr class="text-center text-dark bg-gradient-light">
                                <th>N°</th>
                                <th>Libéllé</th>
                                <th>Code</th>
                                <th>Type</th>
                                <th width="12%">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for ct_anomalie in ct_anomalies %}
                            {% set i = ( i | default(0) ) + 1 %}
                                <tr>
                                    <td class="text-center">{{ i }}</td>
                                    <td>{{ ct_anomalie.anmlLibelle }}</td>
                                    <td>{{ ct_anomalie.anmlCode }}</td>
                                    <td>
                                        {% if(ct_anomalie.ctAnomalieType is not null) %}
                                            {{ ct_anomalie.ctAnomalieType.atpLibelle }}
                                        {% endif %}
                                    </td>
                                    <td class="text-center">
                                        {# <a class="btn btn-sm bg-gradient-info text-white"
                                            href="{{ path('app_ct_anomalie_show', {'id': ct_anomalie.id}) }}">
                                                <i class="fas fa-eye"></i>
                                        </a> #}
                                        {% if is_granted('ROLE_SUPERADMIN') %}
                                        <a class="btn btn-sm bg-gradient-warning text-white" title="Modifier"
                                            href="{{ path('app_ct_anomalie_edit', {'id': ct_anomalie.id}) }}">
                                                <i class="fas fa-pen"></i>
                                        </a>
                                        {% endif %}
                                        {% if is_granted('ROLE_SUPERADMIN') %}
                                        <a class="btn btn-sm bg-gradient-danger text-white" title="Supprimer"
                                            href="{{ path('app_ct_anomalie_delete', {'id': ct_anomalie.id}) }}">
                                                <i class="fas fa-trash"></i>
                                        </a>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5" class="bg-gradient-danger text-white text-center">Aucun enregistrement trouvé.</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <a href="{{ path('app_ct_anomalie_index') }}" class="btn btn-sm bg-gradient-secondary text-white btn-icon-split ml-2 mr-2">
                        <span class="icon text-white">
                            <i class="fas fa-list"></i>
                        </span>
                        <span class="text">Retour à la liste</span>
                    </a>
                    {% if is_granted('ROLE_SUPERADMIN') %}
                    <a href="{{ path('app_ct_anomalie_new') }}" class="btn btn-sm bg-gradient-primary text-white btn-icon-split ml-2 mr-2">
                        <span class="icon text-white">
                            <i class="fas fa-plus"></i>
                        </span>
                        <span class="text">Créer une anomalie</span>
                    </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
